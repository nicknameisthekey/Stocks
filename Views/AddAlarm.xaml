<Window x:Class="Stocks.Views.AddAlarm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stocks.Views"
        mc:Ignorable="d"
        Title="AddAlarm" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0">Цена:</TextBlock>
        <TextBox x:Name="priceTB" Grid.Column="1" Grid.Row="0"></TextBox>
        <TextBlock Grid.Row="1" Grid.Column="0">Условие</TextBlock>
        <ComboBox x:Name="ConditionBox" Grid.Row="1" Grid.Column="1">
            <TextBlock Text="больше или равно"></TextBlock>
            <TextBlock Text="меньше"></TextBlock>
        </ComboBox>
        <Button Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3" Click="addAlarm_Click">Добавить</Button>
    </Grid>
</Window>
