<UserControl x:Class="Stocks.Views.Interfax"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Stocks.Views"
             xmlns:models="clr-namespace:Stocks.Models"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Control.Resources>
        <DataTemplate DataType="{x:Type models:InterfaxData}">
            <TextBlock Text="{Binding Text}"></TextBlock>
        </DataTemplate>
    </Control.Resources>

    <Grid>
        <ListView ItemsSource="{Binding FactsList}">

        </ListView>
    </Grid>
</UserControl>
