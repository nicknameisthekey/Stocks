<Window x:Class="Stocks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stocks"
        mc:Ignorable="d" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate  x:Key="lvTemplate">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Ticker}" Margin="3"></TextBlock>
                    <TextBlock Text="{Binding CurrentPrice}" Margin="3"></TextBlock>
                    <TextBlock Text="{Binding PriceChangePrcnt}" Margin="3"></TextBlock>
                </StackPanel>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>

        <ListView ItemsSource="{Binding Prices}" ItemTemplate="{StaticResource ResourceKey=lvTemplate}">
        </ListView>
    </Grid>
</Window>
